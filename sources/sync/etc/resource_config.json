{
  "log_level": "debug",
  "log_file": "resource.log",
  "environments": {
    "eden":{
      "host_name":"foreman-dev",
      "host_domain":"dev.lan",
      "web_context":"/",
      "api_type":"foreman",
      "api_version":2
    },
    "ergo":{
      "host_name":"foreman-prd",
      "host_domain":"prd.lan",
      "web_context":"/",
      "api_type":"foreman",
      "api_version":2
    }
  },
  "map": {
    "attributes": {
      "id": "copy-read-only",
      "name": "copy"
    },
    "resource_collections": {
      "host": {
        "attributes": {
          "*": "copy"
        }
      },
      "parameters": {
        "attributes": {
          "value": "copy"
        }
      },
      "common_parameters": {
        "attributes": {
          "value": "copy"
        }
      },
      "hostgroups": {
        "attributes": {
          "name": "copy",
          "domain_name": "rename:domain_id",
          "environment_name": "rename:environment_id",
          "subnet_name": "rename:subnet_id",
          "operatingsystem_name": "rename:operatingsystem_id",
          "puppet_proxy": "copy",
          "puppet_ca_proxy": "copy"
        }
      }
    }
  },
  "action": {
    "export-eden": {
      "options": {
        "environment": "eden",
        "host_name": "#{resource_id}"
      },
      "resources": {
        "common_parameter": {
          "index": {
            "file_name": "export.common_parameter.index-common_parameter.json"
          }
        },
        "hostgroup": {
          "index": {
            "selctor": "#{host_hostgroups_selctor(#{resource_id})}",
            "file_name": "export.host.#{resource_id}.index-hostgroups.json"
          }
        },
        "host": {
          "index": {
            "file_name": "export.host.${resource_id}.index-host.json"
          }
        }
      }
    }
  }
}